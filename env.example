# Application Configuration
DEBUG=True
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=sqlite:///./credit_monitor.db
# For PostgreSQL: DATABASE_URL=postgresql://postgres:password@localhost:5432/credit_monitor

# API Keys (Get these from respective services)
# Yahoo Finance: No API key required (uses yfinance library)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
NEWS_API_KEY=your_newsapi_key_here
FRED_API_KEY=your_fred_api_key_here

# Data Ingestion Settings
DATA_REFRESH_INTERVAL=1800  # 30 minutes in seconds
MAX_RETRIES=3
RETRY_DELAY=5

# Scoring Model Weights
FINANCIAL_WEIGHT=0.4
MARKET_WEIGHT=0.3
NEWS_WEIGHT=0.3

# Alert Settings
SCORE_CHANGE_THRESHOLD=20.0
ALERT_TIME_WINDOW=86400  # 24 hours in seconds

# Frontend Configuration
API_BASE_URL=http://localhost:8000



